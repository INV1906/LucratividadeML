# Configurações de Produção - Mercado Livre Lucratividade
# Copie este arquivo para .env e configure as variáveis

# Flask
FLASK_SECRET_KEY=sua_chave_super_secreta_aqui_mude_em_producao
FLASK_ENV=production
PORT=8000

# Banco de Dados
DB_HOST=localhost
DB_USER=seu_usuario_mysql
DB_PASSWORD=sua_senha_mysql
DB_NAME=mercadolivre_lucratividade

# Mercado Livre API
MELI_APP_ID=seu_app_id_mercadolivre
MELI_CLIENT_SECRET=seu_client_secret_mercadolivre
MELI_REDIRECT_URI=https://seudominio.com/callback

# URLs da API (não alterar)
URL_CODE=https://auth.mercadolivre.com.br/authorization
URL_OAUTH_TOKEN=https://api.mercadolibre.com/oauth/token

# Configurações de Arquivos
ARQUIVO_RESPONSE=response.json
ARQUIVO_PRODUTOS=produtos.json
ARQUIVO_VENDAS=vendas.json

# Configurações de Produção
NGROK_HTTPS=false
